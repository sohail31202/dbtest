<%- include('header') %>

    <style>
        .proImgList img {
            height: 122px;
            object-fit: cover;
        }

        .commodity_div {
            background: #efefef;
            border-radius: 20px;
        }

        .image_div {
            background: #fff;
            width: 90px;
            height: 90px;
            margin: 10px auto;
            border-radius: 60%;
            text-align: center;
        }

        .image_div img {
            margin-top: 18px;
            width: 70px;
        }

        .commodity_name {
            font-weight: 600;
            text-align: center;
            font-size: 16px;
            color: #3a3a3a;
        }

        .commodity_price_div {
            text-align: center;
            color: #5a5a5a;
        }

        .commodity_quantity {
            color: #ff8d00;
        }
    </style>

    <!-- mid-part start -->
    <div class="main-panel">
        <div class="contentright w-auto">
            <div class="container-fluid mt-3">
                <div class="row">
                    <div class="col-md-10">
                        <div class="d-flex">
                            <div class="tableheading ">
                                <h3>Fetch Shipment Rate</h3>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-2">
                        <div class="searchbox float-right">
                            <div class="form-group has-search">
                                <a href="/shipment" class="btn btn-dark mt-2">Back</a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Start -->
                <div class="row">
                    <div class="col-md-12 grid-margin stretch-card">
                        <div class="card position-relative">
                            <div class="row">
                                <div class="form-group col-md-4 col-xs-12">
                                    <label class="col-md-5 detail_label">Commodity Name:</label>
                                    <label class="col-md-7 detail_value">
                                        <%= shipmentDetail.commodity_name %>
                                    </label>
                                </div>

                                <div class="form-group col-md-4 col-xs-12">
                                    <label class="col-md-5 detail_label">Commodity Weight:</label>
                                    <label class="col-md-7 detail_value">
                                        <%= shipmentDetail.quantity %>
                                    </label>
                                </div>

                                <div class="form-group col-md-4 col-xs-12">
                                    <label class="col-md-5 detail_label">Source Address:</label>
                                    <label class="col-md-7 detail_value">
                                        4009 Marathon Blvd, Suite 300 Austin US
                                    </label>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-md-4 col-xs-12">
                                    <label class="col-md-5 detail_label">Address line-1:</label>
                                    <label class="col-md-7 detail_value">
                                        <%= shipmentDetail.address %>
                                    </label>
                                </div>

                                <div class="form-group col-md-4 col-xs-12">
                                    <label class="col-md-5 detail_label">City:</label>
                                    <label class="col-md-7 detail_value">
                                        <%= shipmentDetail.city %>
                                    </label>
                                </div>

                                <div class="form-group col-md-4 col-xs-12">
                                    <label class="col-md-5 detail_label">State:</label>
                                    <label class="col-md-7 detail_value">
                                        <%= shipmentDetail.state %>
                                    </label>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-md-4 col-xs-12">
                                    <label class="col-md-5 detail_label">Postal Code:</label>
                                    <label class="col-md-7 detail_value">
                                        <%= shipmentDetail.pin_code %>
                                    </label>
                                </div>
                            </div>

                            <form class="pt-3" id="formData">
                                <input type="hidden" name="_csrf" id="csrf" value="">
                                <input type="hidden" id="id" value="<%= shipmentDetail.id%>">

                                    <div class="form-group col-sm-4">
                                        <label for="packageDimension">Parcel length(in inch):</label>
                                        <input type="text" class="form-control" id="pLength" name="parcelLength" placeholder="">
                                    </div>

                                    <div class="form-group col-sm-4">
                                        <label for="packageDimension">Parcel width(in inch):</label>
                                        <input type="text" class="form-control " id="pWidth" name="parcelWidth" placeholder="">
                                    </div>

                                    <div class="form-group col-sm-4">
                                        <label for="packageDimension">Parcel height(in inch):</label>
                                        <input type="text" class="form-control " id="pHeight" name="parcelHeight" placeholder="">
                                    </div>

                                <div class="form-group col-sm-4">
                                    <label for="packageDimension">Parcel Weight(in gram):</label>
                                    <input type="text" class="form-control " id="pWeight" name="parcelHeight"
                                        placeholder="">
                                </div>
                                <div class="mt-3 col-md-12 pb-3">
                                    <button class="btn btn-success btn-block w-25 btn-xm m-auto" type="button" id="shipmentForm">Fetch
                                        Rate</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- footer section start -->
        <%- include('footer') %>

            <script>

                // Delete intent by ajax. 
                $('#shipmentForm').click(function () {
                    const id = $('#id').val()
                    console.log("id", id);
                    const formData = new FormData();
                    formData.append("p_length", $('#pLength').val())
                    formData.append("p_width", $('#pWidth').val())
                    formData.append("p_height", $('#pHeight').val())
                    formData.append("p_weight", $('#pWeight').val())
                    formData.append("rate_id", id)

                    $.ajax({
                        type: "post",
                        url: `/update-shipment-detail/${id}`,
                        data: formData,
                        dataType: 'JSON',
                        //    cache : false,
                        contentType: false,
                        processData: false,
                        success: function (response) {
                            console.log("response", response);
                            if (response.status == "success") {
                                toastr.remove();
                                toastr.success(response.message);
                                window.setTimeout(function () {

                                    // window.location.reload();
                                    window.location = `/shipping-detail/${response.id}`;

                                }, 1000);
                            }
                        },
                        error: function (response) {
                            let errorResponse = JSON.parse(response.responseText)
                            toastr.remove();
                            toastr.error(errorResponse.message);
                        }
                    });
                });
            </script>