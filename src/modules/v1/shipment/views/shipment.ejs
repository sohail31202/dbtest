                 <script>
                    $(document).ready(function () {
                        var oTable = $('table').DataTable({
                            'paging': true,
                            'searching': true,
                            'processing': true,
                            'serverSide': true,
                            'serverMethod': 'post',
                            'ajax': {
                                'url': '/shipment-list',
                                'data': function (data) {
                                }
                            },
                            'serverSide': true,
                            'aaSorting': [],
                            'columns': [
                                { data: 's_no', "sortable": false },
                                { data: 'user_name', "sortable": false },
                                { data: 'commodity', "sortable": false },
                                // { data: 'quantity', "sortable": false },
                                { data: 'shipment_type', "sortable": false },
                                { data: 'shipment_id', "sortable": false },
                                { data: 'status', "sortable": false },
                                // { data: 'shipment_status', "sortable": false },
                                { data: 'shipment_charge', "sortable": false },
                                { data: 'address', "sortable": false },
                                // { data: 'contact_detail', "sortable": false },
                                { data: 'created_at', "sortable": false },
                                { data: 'action', "sortable": false }
                            ]

                        });

                        $('#CustomSearchTextField').keyup(function () {
                            oTable.search($(this).val()).draw();
                        });

                        // For showing multiple image.
                        Fancybox.bind("[data-fancybox]", {});

                    });

                    // Get deleted info id.
                    const showInfo = (data, deleted_at) => {
                        $('#userName').html(data.fullname);
                        $('#userContactNumber').html(data.phone_dial_code+' '+data.phone_number);
                        $('#userEmail').html(data.email);
                        $('#userDeletedAt').html(data.deleted_at);
                        $('#userDeletedBy').html(data.deleted_by);
                    }
                    // Get deleted intent id.
                    const deleteId = (id) => {
                        $('#deleteBtnId').val(id);
                    }

                    // Delete intent by ajax. 
                    $('#deleteBtn').click(function () {
                        var deletedId = $('#deleteBtnId').val();

                        $.ajax({
                            type: "post",
                            url: `/delete-user`,
                            data: { 'id': deletedId },
                            dataType: 'JSON',
                            beforeSend: function () {
                                $("#processImg").show();
                                $(".loaderShow").show();

                            },
                            complete: function () {
                                $("#processImg").hide();
                                $(".loaderShow").hide();
                            },
                            success: function (response) {
                                if (response.status == "success") {
                                    toastr.remove();
                                    toastr.success(response.message);
                                    window.setTimeout(function () {
                                        window.location.reload();
                                    }, 1000);
                                }
                            },
                            error: function (response) {
                                let errorResponse = JSON.parse(response.responseText)
                                toastr.remove();
                                toastr.error(errorResponse.message);
                            }
                        });
                    });

                </script> 