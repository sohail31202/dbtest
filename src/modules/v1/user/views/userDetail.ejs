    </style>

    <!-- mid-part start -->
    <div class="main-panel">
        <div class="contentright w-auto">
            <div class="container-fluid mt-3">
                <div class="row">
                    <div class="col-md-10">
                        <div class="d-flex">
                            <div class="tableheading ">
                                <h3>User Detail</h3>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-2">
                        <div class="searchbox float-right">
                            <div class="form-group has-search">
                                <a href="/users" class="btn btn-dark mt-2">Back</a>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-md-12 grid-margin">
                        <div class="card position-relative">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-3 col-xs-12">
                                        <div class="col-md-12 user_detail_profile_image text-center">
                                            <img src="<%= userData[0].profile_img %>" data-fancybox alt="user">
                                        </div>
                                        <div class="col-md-12 detail_user_name text-center">
                                            <%= userData[0].fullname %>
                                        </div>
                                        <div class="col-md-12 detail_user_email text-center">
                                            <%= userData[0].email %>
                                        </div>
                                    </div>
                                    <div class="col-md-9 col-xs-12 p-0">
                                        <div class="form-inline-custom">
                                            <div class="form-group col-md-4 col-xs-12">
                                                <label class="col-md-4 detail_label">Contact</label>
                                                <label class="col-md-8 detail_value intent_overflow"
                                                    title="<%= userData[0].contact%>">
                                                    <%= userData[0].contact %>
                                                </label>
                                            </div>

                                            <!-- <div class="form-group col-md-4 col-xs-12">
                                                <label class="col-md-4 detail_label">Email</label>
                                                <label class="col-md-8 detail_value"><%= userData[0].email %>
                                                </label>
                                            </div>

                                            <div class="form-group col-md-4 col-xs-12">
                                                <label class="col-md-4 detail_label">Name</label>
                                                <label class="col-md-8 detail_value"><%= userData[0].fullname %></label>
                                            </div> -->

                                            <div class="form-group col-md-4 col-xs-12">
                                                <label class="col-md-4 detail_label">DOB</label>
                                                <label class="col-md-8 detail_value">
                                                    <%= userData[0].dob %>
                                                </label>
                                            </div>

                                            <div class="form-group col-md-4 col-xs-12">
                                                <label class="col-md-4 detail_label">Age</label>
                                                <label class="col-md-8 detail_value">
                                                    <%= userData[0].age %> yr
                                                </label>
                                            </div>

                                            <div class="form-group col-md-4 col-xs-12">
                                                <label class="col-md-4 detail_label">Signup type</label>
                                                <label class="col-md-8 detail_value">
                                                    <%= userData[0].signup_type %>
                                                </label>
                                            </div>
                                            <div class="form-group col-md-4 col-xs-12">
                                                <label class="col-md-4 detail_label">Joined At</label>
                                                <label class="col-md-8 detail_value">
                                                    <%= userData[0].joined_at %>
                                                </label>
                                            </div>
                                            <% if(userData[0].signup_type=='Social' ){ %>
                                            <div class="form-group col-md-4 col-xs-12">
                                                <label class="col-md-4 detail_label"> Social Profile </label>
                                                <label class="col-md-8 detail_value">
                                                    <%= userData[0].social_type %>
                                                </label>
                                            </div>
                                            <% } %>
                                            <% for(let i=0; i<userData.length; i++){ %>
                                                <div class="form-group col-md-4 col-xs-12">
                                                    <label class="col-md-4 detail_label">
                                                        <% if(userData[i].address_type==1){ %> Address<% } %>
                                                    </label>
                                                    <label class="col-md-8 detail_value">
                                                        <% if(userData[i].address_type==1) { %>
                                                            <%= userData[i].uaddress %>
                                                                <% } %>
                                                    </label>
                                                </div>
                                                <div class="form-group col-md-4 col-xs-12">
                                                    <label class="col-md-4 detail_label">
                                                        <% if(userData[i].address_type==2) { %> Shipping Address<% } %>
                                                    </label>
                                                    <label class="col-md-8 detail_value">
                                                        <% if(userData[i].address_type==2) { %>
                                                            <%= userData[i].uaddress %>
                                                                <% } %>
                                                    </label>
                                                </div>
                                                <% } %>
                                        </div>
                                    </div>
                                </div>

                                <hr>
                                <div class="row">
                                    <div class="col-md-12">
                                        <ul class="nav nav-tabs">
                                            <li><a class="nav-link active" data-toggle="tab" href="#menu1">Transaction <span
                                                        class="tab_counter like_request_count">0</span></a>
                                            </li>
                                            <li><a class="nav-link" data-toggle="tab" href="#menu2">Commodity <span
                                                        class="tab_counter friends_count">0</span></a></li>
                                        </ul>

                                        <div class="tab-content">
